@model Snippy.App.Models.ViewModels.ConciseCommentViewModel

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this comment?</h3>
<div>
@Html.DisplayForModel()

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @Html.ActionLink("Delete", "Delete", "Comments", new {id = Model.Id}, new {@class = "btn  btn-danger"}) 
            @Html.ActionLink("Cancel", "Details", "Snippets", new {id = Model.Snippet.Id}, new {@class = "btn btn-default"})
        </div>
    }
</div>
