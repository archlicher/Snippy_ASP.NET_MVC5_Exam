@model Snippy.App.Models.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-sm-5">
        <h2>Latest snippets:</h2>
        @Html.DisplayFor(x => x.Snippets)
    </div>
    <div class="col-sm-5">
        <h2>Latest comments:</h2>
        @Html.DisplayFor(x => x.Comments)
    </div>
    <div class="col-sm-2">
        <div class="panel panel-primary">
            <div class="panel-heading">Best Labels</div>
            <div class="panel-body">
                @Html.DisplayFor(x => x.Labels)
            </div>
        </div>
    </div>
</div>